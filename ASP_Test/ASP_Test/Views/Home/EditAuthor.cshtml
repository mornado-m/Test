
@{
    ViewBag.Title = "EditAuthor";
}

<div>
    <h3>@ViewBag.AuthorName</h3>(@ViewBag.DOB.ToShortDateString()) <br/><br/>
    <p>Information:</p>
    <form method="post" action="..\EditAuthor">
        <input type="hidden" name="author_id" value="@ViewBag.AuthorId"/>
        <textarea name="info" class="inputInfo">@ViewBag.Info</textarea><br/><br/>
        <input type="submit" name="ok" value="OK"/>
        <input type="submit" name="cancel" value="Cancel"/>
    </form>
</div>


